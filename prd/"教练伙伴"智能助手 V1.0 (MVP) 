```typescript
// app/api/reports/generate/route.ts
export async function POST(request: Request) {
  const { sessionId } = await request.json();
  
  // 1. è·å–å®Œæ•´å¯¹è¯è®°å½•
  const messages = await getSessionMessages(sessionId);
  
  // 2. è°ƒç”¨ Claude ç”ŸæˆæŠ¥å‘Š
  const reportData = await generateSummaryReport(messages);
  
  // 3. å­˜å‚¨åˆ°æ•°æ®åº“
  const report = await db.summary_reports.create({
    data: {
      session_id: sessionId,
      user_id: userId,
      topic: reportData.topic,
      insights: JSON.stringify(reportData.insights),
      action_plans: JSON.stringify(reportData.action_plans),
      commitment: reportData.commitment,
    }
  });
  
  // 4. è®°å½•åˆ†ææ—¥å¿—
  await logAnalytics('report_generated', { scenario, duration });
  
  return NextResponse.json(report);
}
```

