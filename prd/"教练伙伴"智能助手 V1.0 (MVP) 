async function checkSafetyBoundaries(
  message: string
): Promise<{ isSafe: boolean; redirectMessage?: string }> {
  const response = await callClaude({
    system: SAFETY_SYSTEM_PROMPT,
    message: `è¯„ä¼°ä»¥ä¸‹ç”¨æˆ·æ¶ˆæ¯æ˜¯å¦åŒ…å«å¿ƒç†å¥åº·é£é™©ä¿¡å·ï¼š\n\n${message}`,
  });
  
  if (response.containsRisk) {
    return {
      isSafe: false,
      redirectMessage: generateRedirectMessage(),
    };
  }
  
  return { isSafe: true };
}
